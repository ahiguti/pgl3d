public threaded function {t} t
clamp(t x, t mi, t mx)
{
  return min(max(x, mi), mx);
}

public threaded function int dot_int(ivec3 const& a, ivec3 const& b)
{
  return a.x * b.x + a.y * b.y + a.z * b.z;
}

public threaded function {t} t abs(t x)
{
  return x < t() ? -x : x;
}

